{
  "name": "sg-react-native-kit-repo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "npm install",
    "demo:start": "npm --workspace apps/demo start",
    "demo:android": "npm --workspace apps/demo run android",
    "demo:ios": "npm --workspace apps/demo run ios",
    "lint": "npm --workspace apps/demo run lint",
    "test": "npm --workspace apps/demo run test"
  }
}
